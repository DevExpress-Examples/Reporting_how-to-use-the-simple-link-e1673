<Window x:Class="UseCollectionViewLink.Window1" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/printing" 
    Title="Print Preview" Height="400" Width="650" Loaded="Window_Loaded">

    <!--region #SimpleLink-->
    <Window.Resources>
        <DataTemplate x:Key="dayNameTemplate">
            <dxe:TextEdit Text="{Binding Path=Content, Mode=OneWay}" />
        </DataTemplate>
    </Window.Resources>
    <!--endregion #SimpleLink-->

    <dxp:DocumentPreview Name="preview" />
    
</Window>
